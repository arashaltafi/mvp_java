<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:src="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/img_last_news"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toLeftOf="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginRight="8dp"
            android:gravity="right|center"
            android:layout_gravity="right|center"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:id="@+id/txt_title_last_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginRight="8dp"
                android:src="@color/teal_700"
                app:civ_border_width="1dp"
                android:layout_alignParentRight="true"
                app:civ_border_color="@color/purple_500"
                android:id="@+id/img_writer_last_news"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/img_writer_last_news"
                android:textColor="@color/white"
                android:layout_marginRight="8dp"
                android:id="@+id/txt_writer_last_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/txt_writer_last_news"
                android:textColor="@color/white"
                android:layout_marginRight="8dp"
                android:id="@+id/txt_date_last_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/shape_video"
                android:layout_marginLeft="8dp"
                android:id="@+id/txt_videos_show"
                android:layout_alignParentLeft="true"
                android:textColor="@color/withe"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>